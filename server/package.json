{
    "name": "server",
    "version": "1.0.0",
    "engines": {
        "node": ">=13.7.0"
    },
    "scripts": {
        "start:dev": "dotenv -e .env -e .env.dev -- nodemon -r esm --harmony ./src/app.js",
        "start:prod": "yarn node -r esm --harmony ./src/app.js",
        "start:babel": "dotenv nodemon --watch . --exec babel-node ./src/app.js",
        "build:.": "babel ./src -d ./lib --copy-files",
        "server:setup": "sequelize db:migrate:undo:all --env=production && sequelize db:migrate --env=production",
        "test": "run-s refresh:test test:server",
        "debug": "dotenv -e .env.dev -e .env -- nodemon -r esm --inspect  --harmony ./src/app.js",
        "test:server": "dotenv -e .env.test -e .env -- nyc mocha ./test",
        "test:babel": "dotenv -e .env.test -e .env -- nyc mocha ./test --exit --recursive",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "report": "nyc report --reporter=text-lcov",
        "lint": "eslint ./src/**/*.js --fix",
        "migrate": "sequelize db:migrate",
        "drop": "sequelize db:migrate:undo:all",
        "seed": "sequelize db:seed:all",
        "refresh": "run-s \"drop --env={1}\" \"migrate --env={1}\" --",
        "refresh:test": "yarn run refresh test"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "chai-subset": "^1.6.0",
        "coveralls": "^3.0.11",
        "dotenv": "^8.2.0",
        "dotenv-cli": "^3.1.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-plugin-import": "^2.20.2",
        "faker": "^4.1.0",
        "jest": "^25.3.0",
        "mocha": "^7.1.1",
        "nodemon": "^2.0.3",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.0.1",
        "sequelize-cli": "^5.5.1",
        "sinon": "^9.0.2",
        "sinon-chai": "^3.5.0",
        "sinon-express-mock": "^2.2.1",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "@yarnpkg/pnpify": "^2.0.0-rc.20",
        "axios": "^0.19.2",
        "babel-polyfill": "^6.26.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "date-fns": "^2.11.1",
        "esm": "^3.2.25",
        "express": "^4.17.1",
        "express-joi-validation": "^4.0.3",
        "jest-cli": "^25.3.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "pg": "^8.0.0",
        "pg-hstore": "^2.3.3",
        "sequelize": "^5.21.6",
        "swagger-ui-express": "^4.1.4",
        "uuid": "^7.0.3"
    },
    "mocha": {
        "timeout": 2000,
        "bail": true,
        "exit": true,
        "ignore": "appHelper.js",
        "recursive": true,
        "require": [
            "esm"
        ],
        "v8HarmonyOptionalChaining": true,
        "harmonyOptionalChaining": true
    }
}
