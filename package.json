{
    "name": "yum-graphql",
    "version": "1.0.0",
    "engines": {
        "node": ">=13.7.0"
    },
    "scripts": {
        "start:dev": "dotenv -e .env -e .env.dev -- ts-node-dev -r esm --harmony --respawn --transpileOnly ./src/app.ts",
        "start": " node -r esm --harmony ./dist/app.js",
        "server:setup": "sequelize db:migrate:undo:all --env=production && sequelize db:migrate --env=production",
        "test": "run-s refresh:test test:server",
        "debug": "dotenv -e .env.dev -e .env -- nodemon -r esm --inspect  --harmony ./src/app.ts",
        "test:server": "dotenv -e .env.test -e .env -- nyc mocha ./test",
        "report": "nyc report --reporter=text-lcov",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}' --fix",
        "migrate2": "dotenv -e prisma/.env -- node -r esm database/migrate",
        "migrate": "sequelize db:migrate",
        "drop": "sequelize db:migrate:undo:all",
        "seed": "sequelize db:seed:all",
        "refresh": "run-s \"drop --env={1}\" \"migrate --env={1}\" --",
        "refresh:test": "npm run refresh test",
        "generate:prisma": "prisma generate",
        "generate:nexus": "dotenv -- node -r esm -r ts-node/register/transpile-only src/schema",
        "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
        "postinstall": "npm -s run generate",
        "build": "npm -s run clean && npm -s run generate && tsc",
        "clean": "rm -rf dist"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@prisma/cli": "^2.0.0-beta.3",
        "@types/express": "^4.17.6",
        "@types/faker": "^4.1.11",
        "@types/node": "^13.13.2",
        "@types/ws": "^7.2.4",
        "@typescript-eslint/eslint-plugin": "^2.27.0",
        "@typescript-eslint/parser": "^2.27.0",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "chai-subset": "^1.6.0",
        "dotenv-cli": "^3.1.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-prettier": "^3.1.3",
        "faker": "^4.1.0",
        "mocha": "^7.1.1",
        "mocha-junit-reporter": "^1.23.3",
        "nodemon": "^2.0.3",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.0.1",
        "prettier": "^2.0.4",
        "sequelize-cli": "^5.5.1",
        "source-map-support": "^0.5.16",
        "ts-node": "^8.9.0",
        "ts-node-dev": "^1.0.0-pre.44",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "@nexus/schema": "^0.13.1",
        "@prisma/client": "^2.0.0-beta.3",
        "apollo-server-express": "^2.12.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "date-fns": "^2.11.1",
        "esm": "^3.2.25",
        "express": "^4.17.1",
        "express-joi-validation": "^4.0.3",
        "graphql": "^15.0.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "nexus-prisma": "^0.12.0"
    },
    "mocha": {
        "timeout": 2000,
        "bail": true,
        "exit": true,
        "ignore": "appHelper.js",
        "recursive": true,
        "require": [
            "esm"
        ],
        "v8HarmonyOptionalChaining": true,
        "harmonyOptionalChaining": true
    }
}
