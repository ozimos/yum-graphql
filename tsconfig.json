{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES2019",
        "sourceMap": true,
        "outDir": "dist",
        "lib": ["ESNEXT"],
        "allowJs": true,
        "rootDir": "src",
        "checkJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["src/*"],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
