{
    "compilerOptions": {
        "module": "esnext",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "lib": ["esnext"],
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
    },
    "include": ["src/*"]
}
